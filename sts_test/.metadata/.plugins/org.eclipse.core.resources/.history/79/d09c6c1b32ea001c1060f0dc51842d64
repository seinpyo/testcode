package testProject;

import java.math.BigDecimal;

public class main {

	public static void main(String[] args) {
 
		double a = 4.2;
		double b = 2.1;
		double doubleAddAnswer = a+b; //기대값 : 6.3
		double doubleSubAnswer = a-b; //기대값 : 2.1
		double doubleMulti = a*b; //기대값 : 8.82
		double doubleDivide = a/b; //기대값 : 2
		
		System.out.println("double +연산 : 4.2+2.1=" + doubleAddAnswer);
		System.out.println("double -연산 : 4.2-2.1=" + doubleSubAnswer);
		System.out.println("double *연산 : 4.2*2.1=" + doubleMulti);
		System.out.println("double /연산 : 4.2/2.1=" + doubleDivide);
		
		System.out.println();
		
		
		BigDecimal bigA = new BigDecimal("3.0");
		BigDecimal bigB = new BigDecimal("2.1");
		BigDecimal bigAddAnswer = bigA.add(bigB);
		BigDecimal bigSubAnswer = bigA.subtract(bigB);
		BigDecimal bigMultiAnswer = bigA.multiply(bigB);
		BigDecimal bigDivideAnswer = bigA.divide(bigB,6);
		
		System.out.println("BigDecimal +연산 : 4.2+2.1=" + bigAddAnswer);
		System.out.println("BigDecimal -연산 : 4.2-2.1=" + bigSubAnswer);
		System.out.println("BigDecimal *연산 : 4.2*2.1=" + bigMultiAnswer);
		System.out.println("BigDecimal /연산 : 4.2/2.1=" + bigDivideAnswer);
		
		
	}
}
